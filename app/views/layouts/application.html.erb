  </head>
  <body>
    <%= render 'layouts/navbar' %>
    <%= render 'layouts/errors' %>
    <div class="page">
      <h1>Fun Guy Chef</h1>
      <h2>A Fungal Approach to Cooking</h2>
      <h3><%= link_to "All Recipes", root_path %> - <%= link_to "Quickest Recipes", recipes_sorted_by_cook_time_path %></h3>
      <div class = "container">
        <%= yield %>
      </div>
  </body>
  </div>


<%= form_for @recipe do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :prep_time %>
  <%= f.text_field :prep_time %>
  <br>
  <%= f.label :cook_time %>
  <%= f.text_field :cook_time %>
  <br>
  <%= f.label :instructions %>
  <%= f.text_area :instructions %>
  <br>
  <%= f.submit "Submit"%>
<% end %>
